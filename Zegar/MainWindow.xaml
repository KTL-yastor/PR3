<Window x:Class="Zegar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zegar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="200" MinWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- Row def -->
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            
       </Grid.RowDefinitions>
        <Label x:Name="lb_time" Content="[Off]" HorizontalAlignment="Center" FontSize="30" VerticalAlignment="Center" Grid.ColumnSpan="2" />
        <Button x:Name="bnt_Start" Content="Start" Grid.Column="0" Grid.Row="1"   Margin="10" Click="bnt_Start_Click"/>
        <Button x:Name="bnt_Stop" Content="Stop" Grid.Column="1" Grid.Row="1" Margin="10" Click="bnt_Stop_Click"/>

    </Grid>
</Window>
